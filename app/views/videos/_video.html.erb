<%= content_tag :tr, class: ["line-through": video.watched? ] do %>
  <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-0">
    <%= form_with model: [ video.collection, video ], data: { controller: "form" } do |form| %>
      <%= form.label :watched, class: "checkbox", for: dom_id(video, :watched) do %>
        <%= form.check_box :watched, class: "checkbox", id: dom_id(video, :watched), data: { action: "form#submit" } %>
      <% end %>
    <% end %>
  </td>
  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= video.title %></td>
  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= video_tags_for(video) %></td>
  <td class="flex gap-2 relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-0">
    <%= link_to "Watch", collection_video_path(video.collection, video), class: "mt-2 rounded-lg py-3 h-12 px-5 bg-blue-100 font-medium" %>
    <%= button_to "Destroy", collection_video_path(video.collection, video), method: :delete, class: "mt-2 rounded-lg py-3 h-12 px-5 bg-red-100 font-medium" %>
  </td>
<% end %>
