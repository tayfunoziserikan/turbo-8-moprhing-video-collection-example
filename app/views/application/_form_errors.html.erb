<% if resource.errors.any? %>
  <div class="rounded-md bg-red-50 p-4 my-4">
    <div class="flex">
      <div class="ml-3">
        <h3 class="text-red-800"><%= resource.errors.count %> error</h3>
        <div class="mt-2 text-red-700">
          <ul role="list" class="list-disc space-y-1 pl-5">
            <% resource.errors.full_messages.uniq.each do |error| %>
              <li><small><%= error if resource.errors.any? %>.</small></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
<% end %>
